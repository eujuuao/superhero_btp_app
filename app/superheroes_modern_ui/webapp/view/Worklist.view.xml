<mvc:View
    controllerName="com.sap.heroes.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Page id="page" title="Super-Heróis (Moderno)">
        <content>
            <Table
                id="table"
                width="auto"
                items="{path: '/SuperHeroes'}">
                
                <columns>
                    <!-- COLUNAS COM IDs ESTÁVEIS -->
                    <Column id="imageColumn" width="6rem">
                        <header>
                            <Text id="imageColumnTitle" text="Imagem" />
                        </header>
                    </Column>
                    <Column id="nameColumn">
                        <header>
                            <Text id="nameColumnTitle" text="Nome" />
                        </header>
                    </Column>
                    <Column id="aliasColumn">
                        <header>
                            <Text id="aliasColumnTitle" text="Codinome" />
                        </header>
                    </Column>
                </columns>

                <items>
                    <!-- TEMPLATE DOS ITENS -->
                    <ColumnListItem
                        id="tableItems"
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <!-- CÉLULA 1: A IMAGEM (Renderizada com HTML puro) -->
                            <core:HTML
                                id="heroImageHtml"
                                content="{
                                    path: 'imageUrl',
                                    formatter: '.formatter.createImageTag'
                                }" />

                            <!-- CÉLULA 2: O NOME -->
                            <ObjectIdentifier id="heroName" title="{name}" />

                            <!-- CÉLULA 3: O CODINOME -->
                            <Text id="heroAlias" text="{alias}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
