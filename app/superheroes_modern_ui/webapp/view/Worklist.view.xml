<mvc:View
    controllerName="com.sap.heroes.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page id="page" title="Super-Heróis (Moderno)">
        <content>
            <Table
                id="table"
                width="auto"
                items="{path: '/SuperHeroes'}">
                
                <!-- COLUNAS COM IDs ESTÁVEIS -->
                <columns>
                    <Column id="imageColumn" width="6rem">
                        <Text id="imageColumnTitle" text="Imagem" />
                    </Column>
                    <Column id="nameColumn">
                        <Text id="nameColumnTitle" text="Nome" />
                    </Column>
                    <Column id="aliasColumn">
                        <Text id="aliasColumnTitle" text="Codinome" />
                    </Column>
                </columns>

                <!-- TEMPLATE DOS ITENS -->
                <items>
                    <ColumnListItem
                        id="tableItems"
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <!-- CÉLULA 1: A IMAGEM -->
                            <Image
                                id="heroImage"
                                src="{imageUrl}"
                                width="4rem"
                                height="4rem"
                                densityAware="false" />

                            <!-- CÉLULA 2: O NOME -->
                            <ObjectIdentifier id="heroName" title="{name}" />

                            <!-- CÉLULA 3: O CODINOME -->
                            <Text id="heroAlias" text="{alias}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
