<mvc:View
    controllerName="com.sap.heroes.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page id="page" title="Super-HerÃ³is (Moderno)">
        <content>
            <Table
                id="table"
                width="auto"
                items="{path: '/SuperHeroes'}">
                <columns>
                    <Column width="6rem"><Text text="Imagem" /></Column>
                    <Column><Text text="Nome" /></Column>
                    <Column><Text text="Codinome" /></Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press=".onPress">
                        <cells>
                            <Image src="{imageUrl}" width="4rem" height="4rem" />
                            <ObjectIdentifier title="{name}" />
                            <Text text="{alias}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>

